{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["esnext"],
    "strict": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "outDir": "dist-server",
    "rootDir": ".",
    "skipLibCheck": true,
    "declaration": false
  },
  "include": ["server.ts", "src/server/**/*.ts", "src/types/**/*.ts"],
  "exclude": ["node_modules"]
}
